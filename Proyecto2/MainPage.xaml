<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Proyecto2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Frame>
                <Grid 
                    RowDefinitions="Auto,*,*"
                    RowSpacing="10"
                    >
                <Label Text="{Binding ValorBoleta}" Grid.Row="0"/>
                <Label Text="{Binding MontoTotal}" TextColor="blue" Grid.Row="1"/>
                <Label Text="{Binding PropinaMonto}" TextColor="red" Grid.Row="2"/>
                </Grid>

            </Frame>
            <Grid
                ColumnDefinitions="Auto,*"
                ColumnSpacing="10"
                >
                <Label Text="valor boleta $:" Grid.Column="0"/>
                <Entry
                    x:Name="ValorBoletaEntry"
                    Keyboard="Numeric"
                    Placeholder="0"
                    Text="{Binding ValorBoleta,Mode=TwoWay}" 
                    Grid.Column="1"/>
           </Grid>
            
            <Grid
                ColumnDefinitions="Auto,*,*,*"
                ColumnSpacing="10"
                >
                <Label Text="Elige Propina" Grid.Column="0"/>
                <Button Text="10%" Grid.Column="1"/>
                <Button Text="15%" Grid.Column="2"/>
                <Button Text="20%" Grid.Column="3"/>
            </Grid>
            
            <Grid
                ColumnDefinitions="Auto,*"
                ColumnSpacing="10"
                >
                <Label Text="Propina:" Grid.Column="0"/>
                <Label Text="{Binding PropinaPorcentaje}" Grid.Column="1"/>
                <Slider Maximum ="50"
                    Minimum ="0"                    
                    Value="{Binding PropinaPorcentaje, Mode=TwoWay}"
                    Grid.Column="2"/>
            </Grid>

            <Grid 
            ColumnDefinitions="Auto,*,Auto"
            ColumnSpacing="10">
            <Button Text="-" Grid.Column="0" Command="{Binding DisminuirDivisorCommand}"/>

            <Label Text="{Binding DivisorMonto}" Grid.Column="1"/>

            <Button Text="+" Grid.Column="2" Command="{Binding AumentarDivisorCommand}"/>
            </Grid>            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
