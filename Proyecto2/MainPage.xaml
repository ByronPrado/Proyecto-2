<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Proyecto2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            Margin="0,50,0,0">
                       
            <Frame>
                <Grid
                    Margin="0,0,0,10"                    RowDefinitions="Auto,*,*"
                    ColumnDefinitions="Auto,Auto"
                    ColumnSpacing="10"
                    RowSpacing="10"
                    >
                <Label Text="Monto total Boleta" FontSize="12" Grid.Column="0" Grid.Row="0"/>
                <Label Text="SubTotal:" FontSize="12" Grid.Column="0" Grid.Row="1" />
                <Label Text="Monto Propina:" FontSize="12" Grid.Column="0" Grid.Row="2"/>
                <Label Text="{Binding MontoTotal}" Grid.Column="1" Grid.Row="0"/>
                <Label Text="{Binding ValorBoleta}" TextColor="blue"  Grid.Column="1" Grid.Row="1"/>
                <Label Text="{Binding PropinaMonto}" TextColor="red" Grid.Column="1" Grid.Row="2"/>
                </Grid>

            </Frame>
            <Grid
                ColumnDefinitions="Auto,*"
                ColumnSpacing="10"
                >
                <Label Text="valor boleta $:" Grid.Column="0"/>
                <Entry
                    x:Name="ValorBoletaEntry"
                    Keyboard="Numeric"
                    Placeholder="0"
                    Text="{Binding ValorBoletaEntry,Mode=TwoWay}" 
                    Grid.Column="1"
                    />
           </Grid>
            
            <Grid
                ColumnDefinitions="Auto,*,*,*"
                ColumnSpacing="10"
                >
                <Label Text="Elige Propina" Grid.Column="0"/>
                <Button Text="10%" Command="{Binding EditarPropinaCommand}" CommandParameter="10" Grid.Column="1"/>
                <Button Text="15%" Command="{Binding EditarPropinaCommand}" CommandParameter="15" Grid.Column="2"/>
                <Button Text="20%" Command="{Binding EditarPropinaCommand}" CommandParameter="20" Grid.Column="3"/>
            </Grid>
            
            <Grid
                ColumnDefinitions="Auto,*"
                ColumnSpacing="10"
                >
                <Label Text="Propina:" Grid.Column="0"/>
                <Label Text="{Binding PropinaPorcentaje, StringFormat='{0}%'}" Grid.Column="1"/>
                
                <Slider Maximum ="50"
                    Minimum ="0"
                    Margin="30,0,-20,0"                    
                    Value="{Binding PropinaPorcentaje, Mode=TwoWay}"
                    Grid.Column="2"/>
            </Grid>

            <Grid 
            ColumnDefinitions="Auto,*"
            ColumnSpacing="10">

            <Label Text="Dividir el total:" Grid.Column="0"/>

                <Grid
                    Grid.Column="0"
                    ColumnDefinitions="Auto,*,Auto"
                    Margin="110,0,0,0"
                    HorizontalOptions="Start"
                    ColumnSpacing="25">

                <Button Text="-" Grid.Column="0" Command="{Binding CantidadPersonasCommand}" CommandParameter ="-"/>

                <Label Text="{Binding DivisorMonto}" Grid.Column="1" VerticalOptions="Center"/>

                <Button Text="+" Grid.Column="2" Command="{Binding CantidadPersonasCommand}" CommandParameter ="+"/>

                </Grid>
            </Grid>            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
